@model List<PetMarket.Models.Producto>
<!--banner-->
<div class="banner1">
    <div class="container">
        <h3><a href="">Resultados para</a> : <FONT COLOR=black>@ViewBag.Clave</FONT></h3>
    </div>
</div>
<!--banner-->
<!--content-->
<div class="content">
    <div class="products-agileinfo">
        <div class="container">
            <div class="product-agileinfo-grids w3l">
                <div class="col-md-3 product-agileinfo-grid">
                    <div class="categories">
                        <h3>Categorias</h3>
                        <ul class="tree-list-pad">
                            <li>
                                <input type="checkbox" checked="checked" id="item-0" /><label for="item-0"><span></span>Perros</label>
                                <ul>
                                    <li>
                                        <input type="checkbox" id="item-0-0" /><label for="item-0-0">Pastor Aleman</label>
                                        <ul>                                            
                                        </ul>
                                    </li>
                                    <li>
                                        <input type="checkbox" id="item-0-1" /><label for="item-0-1">Pitbull</label>
                                        <ul>                                          
                                        </ul>
                                    </li>
                                    <li>
                                        <input type="checkbox" id="item-0-2" /><label for="item-0-2">Pequines</label>
                                        <ul>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <input type="checkbox" id="item-1" checked="checked" /><label for="item-1">Gatos</label>
                                <ul>
                                    <li>
                                        <input type="checkbox" checked="checked" id="item-1-0" /><label for="item-1-0">Angora</label>
                                        <ul>
                                        </ul>
                                    </li>

                                </ul>
                            </li>
                            <li>
                                <input type="checkbox" checked="checked" id="item-2" /><label for="item-2">Peces</label>
                                <ul>
                                    <li>
                                        <input type="checkbox" id="item-2-0" /><label for="item-2-0">pesejapo</label>
                                        <ul>
                                        </ul>
                                    </li>
                                    <li>
                                        <input type="checkbox" id="item-2-1" /><label for="item-2-1">peces de colores</label>
                                        <ul>
                                        </ul>
                                    </li>
                                    <li>
                                        <input type="checkbox" id="item-2-2" /><label for="item-2-2">pez globlo</label>
                                        <ul>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                                   
                    
                </div>
                <div class="col-md-9 product-agileinfon-grid1 w3l">                    
                    <div class="mens-toolbar">
                        <p>Showing 1–9 of 21 results</p>
                        <p class="showing">
                            Sorting By
                            <select>
                                <option value=""> Name</option>
                                <option value=""> Rate</option>
                                <option value=""> Color </option>
                                <option value=""> Price </option>
                            </select>
                        </p>
                        <p>
                            Show
                            <select>
                                <option value=""> 9</option>
                                <option value=""> 10</option>
                                <option value=""> 11 </option>
                                <option value=""> 12 </option>
                            </select>
                        </p>
                        <div class="clearfix"></div>
                    </div>
                    <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav1 nav1-tabs left-tab" role="tablist">
                            <ul id="myTab" class="nav nav-tabs left-tab" role="tablist"></ul>
                            <li role="presentation" class="active"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true"><img src="~/images/menu1.png"></a></li>
                            <li role="presentation"><a href="#profile" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile"><img src="~/images/menu.png"></a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                                <div class="product-tab">                                    
                                    @*----------------------producto--------------------------------------*@
                                    @foreach (var item in Model)
                                    {
                                        var imagen = @item.ProductoImagen.FirstOrDefault();
                                        string img = imagen == null ? "no_disponible.jpg" : imagen.Imagen;
                                        <div class="col-md-4 product-tab-grid simpleCart_shelfItem">
                                            <div class="grid-arr">
                                                <div class="grid-arrival">
                                                    <figure>
                                                        <a href="#" class="new-gri" data-toggle="modal" data-target="#myModal1">
                                                            <div class="grid-img">
                                                                <img src="~/ImgProductos/@img" class="img-responsive" alt="">
                                                            </div>
                                                            <div class="grid-img">
                                                                <img src="~/ImgProductos/@img" class="img-responsive" alt="">
                                                            </div>
                                                        </a>
                                                    </figure>
                                                </div>
                                                <div class="block">
                                                    <div class="starbox small ghosting"> </div>
                                                </div>
                                                <div class="women">
                                                    <h6><a href="single.html">@item.Denominacion</a></h6>
                                                    <span class="no-margin isotope--title">@item.Descripcion</span>
                                                    <p><em class="item_price">S/@item.Precio</em></p>
                                                    @*<p><del>S/.@item.Precio</del>@*<em class="item_price">$70.00</em>(para promociones)</p>*@
                                                    <a href="#" data-text="Add To Cart" class="my-cart-b item_add">Al carrito</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @*----------------------producto--------------------------------------*@                                    
                                    <div class="clearfix"></div>
                                </div>                                
                            </div>                            
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
<!--content-->